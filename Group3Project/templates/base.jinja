<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    <title>
    {% block title %}
    {% endblock %}
    </title>
</head>
<body>
    <nav class="navigation">
        <a href="{{ url_for('index') }}">Home</a>
        {% if session["player_info"] %}
        <a href="{{ url_for('info') }}" class="info">Info</a>
        <a href="{{ url_for('travel') }}" class="travel">Travel</a>
        <a href="{{ url_for('store') }}" class="store">Store</a>
        <a href="{{ url_for('logout') }}" class="log">Log Out</a>
        {% endif %}
    </nav>
    <div class="content">
    {% block content %}
    {% endblock %}
    </div>
</body>
</html>